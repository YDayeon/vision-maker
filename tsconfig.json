{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/pages/*": ["src/pages/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "noEmit": true
  },
  "baseUrl": ".",
  "paths": {
    "@": ["src/*"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "babel.plugin.js"],
  "exclude": ["node_modules"]
}
